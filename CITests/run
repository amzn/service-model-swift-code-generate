#!/bin/bash
set -e

ONLY_RUN_SWIFT_LINT=$1
USE_APT_GET=$2

if [ "$USE_APT_GET" == 'yes' ]; then
    apt-get update
    apt-get -y install libssl-dev libz-dev
fi

cd /package

if [ "$ONLY_RUN_SWIFT_LINT" == 'yes' ]; then
    ls
    swiftlint
else
    swift build -Xswiftc -Xfrontend -Xswiftc -sil-verify-none -c release
    #swift test
fi
